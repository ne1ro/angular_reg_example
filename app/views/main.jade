hr
.row
  .col-md-6
    h3.text-center Sign up
    form(name="signup")
      .row
        .col-md-6
          label Your name:
          input(type="text", maxlength="30", placeholder="Jonh Smith", required="true", class="form-control", ng-model="signup.name")
        .col-md-6
          label Your email:
          input(type="email", placeholder="example@example.com", required="true", class="form-control", ng-model="signup.email")

      .row(class="top-buffer")
        .col-md-6
          label Your password:
          input(type="password", ng-minlength="8", required="true", class="form-control", ng-model="signup.password")
        .col-md-6
          label Repeat password:
          input(type="password", ng-minlength="8", required="true", class="form-control", ng-model="signup.passwordRepeated")

      .row(class="top-buffer", ng-show="signup.$valid")
        .col-md-4
        .col-md-4
          button(type="button", class="btn btn-success btn-block") Sign up
        .col-md-4


  .col-md-6
    h3.text-center Log in
    .row
hr
